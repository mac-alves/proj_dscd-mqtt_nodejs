<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Mqtt</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.0/handlebars.min.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/paho-mqtt/1.0.1/mqttws31.js" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <main>
            <div id="main"></div>
            <div class="card empty">
                <em class="fas fa-plus"></em>
            </div>
        </main>

        <footer>

        </footer>
    </div>

    <!-- template de novo usuÃ¡rio -->
    <script id="user-template" type="text/x-handlebars-template">
        <div class="card {{classStatus}}" id="{{idClient}}">
            <label class="switch">
                <input type="checkbox" name="expanded">
                <span class="slider round"></span>
            </label>
            <div class="additional">
                <div class="user-card">
                    <img src="/images/logo.svg" width="110" height="110" alt="Logo card">
                    <div class="name center">
                        {{idClient}}
                    </div>
                </div>
                <div class="more-info">
                    <h1>{{nameClient}}</h1>
                    <table class="points">
                        <thead>
                            <tr>
                                <th width="60" class="center">ST</th>
                                <th>Nome</th>
                                <th width="60" class="center"></th>
                            </tr>
                        </thead>
                        <tbody id="points-{{idClient}}"></tbody>
                    </table>
                    <div class="status">
                        Status: {{infoStatus}}.
                    </div>
                </div>
            </div>
        </div>
    </script>

    <!-- template dos pontos do client -->
    <script id="points-template" type="text/x-handlebars-template">
        <tr class="item" id="{{idPointClient}}">
            <td class="center st {{pointStatus}}"><i class="fas fa-circle"></i></td>
            <td>{{namePointClient}}</td>
            <td class="center ac {{pointState}}"><i class="fas fa-lightbulb"></i></td>
        </tr>
    </script>

    <script src="/js/scripts.js" type="text/javascript"></script>
    <script src="/js/websocket.js"></script>
</body>
</html>